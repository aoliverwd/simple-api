{
    "name": "alexoliverwd/simple-api",
    "description": "A simple REST API framework written in PHP",
    "keywords": [
        "api",
        "REST"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Alex Oliver",
            "homepage": "https://github.com/simple-api",
            "role": "Lead"
        }
    ],
    "support": {
        "issues": "https://github.com/aoliverwd/simple-api/issues"
    },
    "prefer-stable": true,
    "require": {
        "php": ">=8.1",
        "bramus/router": "^1.6",
        "spatie/url": "^2.2"
    },
    "autoload": {
        "classmap": [
            "src/"
        ],
        "files": [
            "src/api.php"
        ]
    },
    "require-dev": {
        "phpstan/phpstan": "^1.9",
        "phpunit/phpunit": "^9.5"
    },
    "scripts": {
        "test" : [
            "./vendor/bin/phpstan analyse -c phpstan.neon"
        ],
        "unit" : [
            "./vendor/bin/phpunit -c ./tests/phpunit.xml"
        ]
    }
}
